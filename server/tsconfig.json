{
  "compilerOptions": {
    "target": "ES2020",
    "module": "UMD",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/app.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
