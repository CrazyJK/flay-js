{
  // 코드 포맷을 prettier로 설정
  "plugins": ["prettier"],

  // eslint의 룰을 기본 권장설정으로 설정
  "extends": ["plugin:prettier/recommended", "prettier/@typescript-eslint"],

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },

  // linter가 파일을 분석할 때, 미리 정의된 전역변수에 무엇이 있는지 명시하는 속성
  "env": {
    // 브라우저의 document와 같은 객체 사용 여부
    "browser": true,
    // node.js에서 console과 같은 전역변수 사용 여부
    "node": true,
    "es6": true
  },
  // ESLint가 무시할 디렉토리, 파일을 설정
  "ignorePatterns": ["node_modules/", "public/dist/", "public/lib/fontawesome-free-6.1.1-web"],

  // ESLint 룰을 설정
  "rules": {
    // prettier에 맞게 룰을 설정
    "prettier/prettier": [
      "error",
      {
        "code": 360,
        "printWidth": 360,
        "endOfLine": "auto",
        "useTabs": false,
        "tabWidth": 2
      }
    ],
    "no-unused-vars": "off"
  }
}
