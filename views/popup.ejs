<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/lib/fontawesome-free-6.1.1-web/css/all.css" />
    <link rel="stylesheet" href="/dist/popup.css" />
    <script defer src="/dist/runtime.js"></script>
    <script defer src="/dist/vendors.js"></script>
    <script defer src="/dist/commons.js"></script>
    <script defer src="/dist/popup.js"></script>
  </head>
  <body class="dark" style="background-color: black">
    <script>
      const userDefaultTheme = localStorage.getItem('@flay-jk:theme');
      let isDarkThemeActive = userDefaultTheme && userDefaultTheme === 'true';
      document.body.classList.toggle('dark', isDarkThemeActive);
      document.body.style.backgroundColor = '';
    </script>

    <main><%- body %></main>
    <footer>
      <div class="notice-container"></div>
    </footer>

    <%- script %>
  </body>
</html>
