doctype html
html(lang='en', data-theme='dark')
    head
        title #{title} Express Website
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        link(rel='stylesheet', href='/stylesheets/layout.css')
        link(rel='stylesheet', href='/stylesheets/flay/flay.common.css')
        script(defer, src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')
        script(defer, src='https://code.jquery.com/jquery-3.6.0.min.js', integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=', crossorigin='anonymous')
        script(defer, src='https://kit.fontawesome.com/673bdd6a2d.js', crossorigin='anonymous')
        script(defer, src='/javascripts/layout.js')
        script(defer, src='/javascripts/flay/flay.common.js')
        script(defer, src='/javascripts/flay/flay.api.js')
    body
        header
            nav.navbar.navbar-expand-lg.p-0
                .container-fluid
                    a.navbar-brand(href='/')
                        img(src='/images/flayground.svg', height="40px")
                    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarNavAltMarkup.collapse.navbar-collapse
                        .navbar-nav.me-auto
                            a.nav-link(href='/flay/home') Home
                            a.nav-link(href='/flay/file') Files
                            a.nav-link(href='/flay/list') List
                        .navbar-nav
                            a.btn.btn-secondary.mx-2(data-bs-toggle='offcanvas' href='#offcanvasSide' role='button' aria-controls='offcanvasSide')
                                i.fas.fa-arrow-left
            .offcanvas.offcanvas-end(tabindex='1', id='offcanvasSide', aria-labelledby='offcanvasSideLabel')
                .offcanvas-header
                    h5.offcanvas-title(id='offcanvasSideLabel')
                        img(src='/images/flayground.svg', height="40px")
                    button.btn-close.text-reset(type='button', data-bs-dismiss='offcanvas', aria-label='Close')
                .offcanvas-body
                    ul.nav.flex-column
                        li.nav-item
                            a.nav-link(href='/flay/home') Home
                        li.nav-item
                            a.nav-link(href='/flay/file') Files
                        li.nav-item
                            a.nav-link(href='/flay/list') List
                        li.nav-item
                            .form-check.form-switch
                                input.form-check-input(type='checkbox', id='themeToggler', checked='true')
                                label.form-check-label(for='themeToggler') Dark
        main
            block content
        footer
